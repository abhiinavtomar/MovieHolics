        <link rel="stylesheet" type="text/css" href="/stylesheets/app.css">  
        <link rel="icon" href="/images/favicon.ico" type="image/x-icon"/>
	    <link rel="shortcut icon" href="/images/favicon.ico" type="image/x-icon"/>
    </head>
    <body>
        <div id="navbar">
            <a href="/" class="navbar-elements">HOME <i class="fas fa-film"></i></a>
            <a href="javascript:void(0)" onclick="navbarCollapse();"><i class="fa fa-bars navbar-elements navbar-bars"></i></a>
            <div class="right-navbar">
                <% if(!currentUser) { %>
                    <a href="/login" class="navbar-elements">LOGIN</a>
                    <a href="/register" class="navbar-elements">REGISTER</a>
                <% } else { %>
                    
                    <a href="/<%= currentUser._id %>" class="navbar-elements">My Dashboard</a>
                    <a href="/logout" class="navbar-elements">LOGOUT</a>
                <% } %>
                
            </div>
            <div class="flash-message-container">
                <% if(success != "") { %>
                    <span class="success"> <%= success %> </span>
                <% } else if (error != "") { %>
                    <span class="error"> <%= error %> </span>
                <% } %>
            </div>
        </div>
        
        <script>
            function navbarCollapse() {
                var myNavbar = document.getElementById("navbar");
                if(myNavbar.classList.contains("responsive")) {
                    myNavbar.classList.remove("responsive");
                } else {
                    myNavbar.classList.add("responsive");
                }
            }
        </script> 
                
 
        
    
    
